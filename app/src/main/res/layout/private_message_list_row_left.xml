<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="300dp"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/message_left"
        android:padding="8dp"
        tools:text="text"
        >

        <ImageView
            android:id="@+id/private_message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/download"
            />
        <TextView
            android:layout_below="@+id/private_message_image"
            android:id="@+id/private_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            tools:text="text"
            android:linksClickable="true"
            android:autoLink="all"
            />

        <TextView
            android:id="@+id/private_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/private_message_content"
            android:layout_below="@id/private_message_content"
            android:padding="4dp"
            android:textSize="10sp"
            tools:text="date"
            />

    </RelativeLayout>

</LinearLayout>